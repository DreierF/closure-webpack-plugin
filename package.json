{
  "name": "closure-webpack-plugin",
  "version": "1.2.0",
  "description": "Webpack Google Closure Compiler and Closure Library plugin",
  "author": "Chad Killingsworth (@ChadKillingsworth)",
  "license": "MIT",
  "publishConfig": {
    "tag": "webpack3"
  },
  "main": "src/index.js",
  "files": [
    "src",
    "schema"
  ],
  "scripts": {
    "commitlint": "commitlint",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint --cache src test",
    "ci:lint:commits": "commitlint --from=${CIRCLE_BRANCH} --to=${CIRCLE_SHA1}",
    "lint-staged": "lint-staged",
    "release": "standard-version",
    "release:ci": "conventional-github-releaser -p angular",
    "release:validate": "commitlint --from=$(git describe --tags --abbrev=0) --to=$(git rev-parse HEAD)",
    "security": "nsp check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverageFrom='src/**/*.js' --coverage",
    "ci:lint": "npm run lint && npm run security",
    "ci:test": "npm run test -- --runInBand",
    "ci:coverage": "npm run test:coverage -- --runInBand"
  },
  "dependencies": {
    "acorn": "^5.0.0",
    "acorn-dynamic-import": "^2.0.0",
    "google-closure-compiler": ">=20180716.0.1",
    "schema-utils": "^0.4.5",
    "webpack-sources": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "5.x",
    "@commitlint/config-angular": "5.x",
    "@webpack-contrib/eslint-config-webpack": "2.x",
    "babel-core": "6.x",
    "babel-jest": "22.x",
    "babel-preset-env": "1.x",
    "conventional-github-releaser": "2.x",
    "del": "3.x",
    "eslint": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-prettier": "2.x",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^4.2.3",
    "memory-fs": "^0.4.1",
    "pre-commit": "1.x",
    "prettier": "^1.x",
    "standard-version": "4.x",
    "webpack": "^3.10.0"
  },
  "engines": {
    "node": ">= 6.9.0 || >= 8.9.0"
  },
  "peerDependencies": {
    "webpack": "3.x"
  },
  "homepage": "https://github.com/webpack-contrib/closure-webpack-plugin",
  "repository": "https://github.com/webpack-contrib/closure-webpack-plugin",
  "bugs": "https://github.com/webpack-contrib/closure-webpack-plugin/issues",
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
